<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://qconsulting.ca/fo3/ModConfig5.0.xsd">

    <moduleName>Weightless Bound Arrows (WBA)</moduleName>

    <installSteps order="Explicit">
        <installStep name="Basic Installation">
            <optionalFileGroups order="Explicit">
                <group name="Select SKSE Plugin:" type="SelectExactlyOne">
                    <plugins order="Explicit">
                        <plugin name="Release (pre-Anniversary)">
                            <description>
                                For Skyrim Special Edition pre-Anniversary update (executable version 1.5.x).
                            </description>
                            <files>
                                <folder source="WBA - Vanilla Config" destination="." />
                                <folder source="WBA - SKSE Plugin (Release - Special Edition)" destination="." />
                            </files>
                            <typeDescriptor>
                                <type name="Recommended" />
                            </typeDescriptor>
                        </plugin>

                        <plugin name="Debug (pre-Anniversary)">
                            <description>
                                For Skyrim Special Edition pre-Anniversary update (executable version 1.5.x).

<!-- fix formatting issue    -->In case you run into problems, the debug version may be able to provide additional information for troubleshooting.
                            </description>
                            <files>
                                <folder source="WBA - Vanilla Config" destination="." />
                                <folder source="WBA - SKSE Plugin (Debug - Special Edition)" destination="." />
                            </files>
                            <typeDescriptor>
                                <type name="Optional" />
                            </typeDescriptor>
                        </plugin>
                    </plugins>
                </group>

                <group name="Other:" type="SelectAny">
                    <plugins order="Explicit">
                        <plugin name="Licenses">
                            <description>
                                This simply includes copies of licenses for libraries used to build WBA to comply with their license terms.

<!-- fix formatting issue    -->You do not need to install this.
                            </description>
                            <files>
                                <folder source="Licenses" />
                            </files>
                            <typeDescriptor>
                                <type name="Optional" />
                            </typeDescriptor>
                        </plugin>
                    </plugins>
                </group>
            </optionalFileGroups>
        </installStep>

        <installStep name="Creation Club Patches">
            <optionalFileGroups order="Explicit">
                <group name="Select patches:" type="SelectAny">
                    <plugins order="Explicit">
                        <plugin name="Arcane Archer Pack">
                            <description>
                                Covers bound arrows added by Arcane Archer Pack.
                            </description>
                            <files>
                                <folder source="WBA - CC Arcane Archer Pack Patch" />
                            </files>
                            <typeDescriptor>
                                <dependencyType>
                                    <defaultType name="NotUsable" />
                                    <patterns>
                                        <pattern>
                                            <dependencies operator="Or">
                                                <fileDependency file="ccbgssse002-exoticarrows.esl" state="Active" />
                                                <fileDependency file="ccbgssse002-exoticarrows.esl" state="Inactive" />
                                            </dependencies>
                                            <type name="Recommended" />
                                        </pattern>
                                    </patterns>
                                </dependencyType>
                            </typeDescriptor>
                        </plugin>
                    </plugins>
                </group>
            </optionalFileGroups>
        </installStep>
    </installSteps>
</config>
